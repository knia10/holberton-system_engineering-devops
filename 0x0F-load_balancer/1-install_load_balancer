#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.
sudo apt-get -y update
sudo apt-get -y install haproxy=1.6.\*
sudo chmod 777 /etc/haproxy/haproxy.cfg
sudo echo "frontend firstbalance
        bind *:80
        option forwardfor
        default_backend webservers

backend webservers
        balance roundrobin
        server 3514-web-01 34.75.84.58:80
        server 3514-web-02 34.138.236.20:80
        server 3514-web-01 34.75.84.58:80 check
        server 3514-web-02 34.138.236.20:80 check
        option httpchk" >> /etc/haproxy/haproxy.cfg
sudo service haproxy restart
